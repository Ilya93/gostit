<h1>Listing studies</h1>
<table class = "studies">
<% @studies.each do |studie| %>
    <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td class="list_description">
            <dl>
                <dt><%= studie.title %></dt>
                <dd><%= truncate(strip_tags(studie.text),
                    length: 80) %></dd>
                <dd><%= studie.user_id %></dd>    
            </dl>
</td>
        <td class="list_actions">
            <%= link_to 'Show', studie %><br/>
            <%= link_to 'Edit', edit_study_path(studie) %><br/>
            <%= link_to 'Destroy', studie, method: :delete, 
            data: { confirm: 'Are you sure?' } %>
</td> 
</tr>
<% end %>
</table>
<br />
<%= link_to 'New study', new_study_path %>